#include <windows.h>

#ifndef VS_VERSION_INFO
#define VS_VERSION_INFO 1
#endif

#define _STRINGIFY(x) #x
#define STRINGIFY(x) _STRINGIFY(x)

VS_VERSION_INFO VERSIONINFO
    FILEVERSION    0,0,1,4
    PRODUCTVERSION 0,0,1,4
{
    BLOCK "StringFileInfo"
    {
       // U.S. English - Windows, Multilingual
       BLOCK "040904E4"
       {
          VALUE "FileDescription", STRINGIFY(C++ Advanced Command Line Parser)
          VALUE "FileVersion", STRINGIFY(0.0.1.4)
          VALUE "ProductName", STRINGIFY(syscmdline)
          VALUE "ProductVersion", STRINGIFY(0.0.1.4)
          VALUE "LegalCopyright", STRINGIFY(Copyright 2023 SineStriker)
        }
    }
    BLOCK "VarFileInfo"
    {
        VALUE "Translation", 0x409, 1252 // 1252 = 0x04E4
    }
}